@model Traversal_Web_App.Models.MailRequest

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Mail Gönderme Sayfası</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Alıcı Mail")
        <input type="text" asp-for="ReceiverMail" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Konu Başlığı")
        <input type="text" asp-for="Subject" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Mesaj İçeriği")
        <textarea cols="30" rows="5" type="text" asp-for="Body" class="form-control"></textarea>
    </div>
    <br />
    <button class="btn btn-outline-primary">Gönder</button>
</form>



