@using Traversal_Web_App.CQRS.Results.GuideResults;
@model GetGuideByIDQueryResult

@{
    ViewData["Title"] = "GetGuides";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehber Bilgi Düznelme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="GuideID" />
    <label>Rehber Adı</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />

    <label>Rehber Açıklaması</label>
    <input type="text" class="form-control" asp-for="Description" />
    <br />

    <button class="btn btn-outline-primary">Rehber Bilgileri Güncelle</button>
</form>

