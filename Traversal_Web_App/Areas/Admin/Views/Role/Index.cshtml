@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var count = 0;
}

<h1>Index</h1>

@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-success">
        <span >Herhangi bir rol bulunamadı!</span>
    </div>
}

<td><a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Yeni Rol Ekle</a></td>


